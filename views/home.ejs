<section id="slider-part" class="slider-active">
  <div
    class="single-slider bg_cover pt-150"
    style="background-image: url(/images/slider/s-1.jpg)"
    data-overlay="4"
  >
    <div class="container">
      <div class="row">
        <div class="col-xl-7 col-lg-9">
          <div class="slider-cont">
            <h1 data-animation="bounceInLeft" data-delay="1s">
              Become A Licensed Real Estate Agent
            </h1>
            <p data-animation="fadeInUp" data-delay="1.3s">
              You can become a licensed real estate agent by earning a RETI certification.
            </p>
            <ul>
              <li>
                <a
                  data-animation="fadeInUp"
